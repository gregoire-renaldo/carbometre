<div class="container">
<h2 class="mt-3">Se connecter</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="form-inputs">
    <%= f.input :username,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "username", id: 'usernameField' },
                  label: "Nom d'utilsateur"
                   %>
    <%= f.input :email,
    :as => :hidden,
                  required: true,
                  autofocus: true,
                  input_html: {  id: 'fieldEmail' } %>
    <%= f.input :password,
    :as => :hidden,
                  required: false,
                  input_html: { value: "azerty" }%>
    <%= f.input :remember_me,
                label: "Se souvenir de moi",
                 as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions mb-3">
    <%= f.button :submit, "Se connecter", class:"btn btn-gradient" %>
  </div>
  <% end %>
<div class="mb-5">
  <%= render "devise/shared/links" %>
</div>
</div>


<%= javascript_pack_tag 'connect' %>
