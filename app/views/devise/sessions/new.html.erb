<div class="container">
<h2>Se connecter</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="form-inputs">
    <%= f.input :username,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "username", id: 'usernameField' } %>
    <%= f.input :email,
    :as => :hidden,
                  required: false,
                  autofocus: true,
                  input_html: {  id: 'fieldEmail' } %>
    <%= f.input :password,
    :as => :hidden, 
                  required: false,
                  input_html: { value: "azerty" },
                  label: 'Mot de passe' %>
    <%= f.input :remember_me,
                label: "Se souvenir de moi",
                 as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Se connecter", class:"btn btn-gradient" %>
  </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>


<%= javascript_pack_tag 'connect' %>
