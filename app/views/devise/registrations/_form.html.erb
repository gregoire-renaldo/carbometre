<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>
  <div class="form-inputs">
  <%= f.input :email,
      :as => :hidden,
                  required: true,
                  autofocus: true,
                  input_html: { id: 'fieldEmail' }%>
    <%= f.input :username,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "nom d'utilisateur", id: 'usernameField' },
                    label: "Nom d'utilisateur"%>
    <%= f.hidden_field :password,
     :as => :hidden,
                  required: true,
                  input_html: { value: 'azerty' }%>
    <%= f.hidden_field :password_confirmation,
     :as => :hidden,
                  required: true,
                  input_html: { value: 'azerty' },%>
  </div>
  <div class="form-actions">
    <%= f.button :submit, "Inscription" %>
  </div>
<% end %>
