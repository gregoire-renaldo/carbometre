<!-- block for total voiture -->
<div class="row mt-2 sticky-top">
  <div class="total-mobile align-items-center">
    <p>Voiture</p>
    <%# <div class="">
      <i>5% <br>d’incertitude</i>
    </div> %>
    <div class="white-rectangle">
      <p id="totalVoiture"></p>
    </div>
    <div id="hideShowVoiture">
      <p id="voitureplusmoins"> + </p>
    </div>
  </div>
</div>


<!-- beginning of fields voiture -->
<div class="voiture">
  <div class="container">
    <div class="intro">
      <p>Vous avez le choix de calcul en kilomètres (en précisant votre consommation) ou en litrage complet (les coefficients
        mentionnés sont les kg de CO2 par litre ou unité mentionnée, selon valeurs de l’ADEME)</p>
    </div>
    <div class="conso-voiture mt-1">
      Calcul par nombre de litres ou nombre de kWh
    </div>
    <!-- field essence -->
    <div class="row align-items-center item mt-1">
      <div class=" col-4 field">
        <%= f.label :essence %>
        <%= f.number_field :essence,  id: 'userEssence',  min: 0 %>
      </div>
      <div class="col-2 unit">
        <p>l</p>
      </div>
      <div class="col-2 charge">
        <p>2.7 kg/l</p>
      </div>
      <div class="col-4 white-rectangle" >
        <p id="scoreEssence"></p>
      </div>
    </div>
    <!-- field gazole -->
    <div class="row align-items-center item mt-1">
      <div class=" col-4 field">
        <%= f.label :gazole %>
        <%= f.number_field :gazole,  id: 'userGazole', min: 0 %>
      </div>
      <div class="col-2 unit">
        <p>l</p>
      </div>
      <div class="col-2 charge">
        <p>3.1 kg/l</p>
      </div>
      <div class="col-4 white-rectangle" >
        <p id="scoreGazole"></p>
      </div>
    </div>
    <!-- field gpl -->
    <div class="row align-items-center item mt-1">
      <div class=" col-4 field">
        <%= f.label :gpl, "GPL" %>
        <%= f.number_field :gpl,  id: 'userGpl', min: 0 %>
      </div>
      <div class="col-2 unit">
        <p>l</p>
      </div>
      <div class="col-2 charge">
        <p>1.86 kg/l</p>
      </div>
      <div class="col-4 white-rectangle">
        <p id="scoreGpl"></p>
      </div>
    </div>
    <!-- field e85  -->
    <div class="row align-items-center item mt-1">
      <div class=" col-4 field">
        <%= f.label :e85 %>
        <%= f.number_field :e85,  id: 'userE85', min: 0 %>
      </div>
      <div class="col-2 unit">
        <p>l</p>
      </div>
      <div class="col-2 charge">
        <p>1.11 kg/l</p>
      </div>
      <div class="col-4 white-rectangle">
        <p id="scoreE85"></p>
      </div>
    </div>
    <!-- field gaz nat kg  -->
    <div class="row align-items-center item mt-1">
      <div class=" col-4 field">
        <%= f.label :gaz, "Gaz NV" %>
        <%= f.number_field :voitgaznat,  id: 'userGaznat', min: 0 %>
      </div>
      <div class="col-2 unit">
        <p>kg</p>
      </div>
      <div class="col-2 charge">
        <p>3.22</p>
      </div>
      <div class="col-4 white-rectangle">
        <p id="scoreGaz"></p>
      </div>
    </div>
    <!-- field electrique  -->
    <div class="row align-items-center item mt-1">
      <div class=" col-4 field">
        <%= f.label :electrique %>
        <%= f.number_field :electrique,  id: 'userElectrique', min: 0 %>
      </div>
      <div class="col-2 unit">
        <p>kWh</p>
      </div>
      <div class="col-2 charge">
        <p>0.052 kg/kWh</p>
      </div>
      <div class="col-4 white-rectangle">
        <p id="scoreElectrique"></p>
      </div>
    </div>
    <div class="conso-voiture mt-1">
      Calcul par consommation et nombre de km
    </div>
    <!-- field essencel  -->
    <div class="row align-items-center item mt-1">
      <div class=" col-2 field text-center"  >
        <p>Essence</p>
        <%= f.label :consommation %>
        <%= f.number_field :lessence, id:'userEssencel', min: 0   %>
        <%= f.label :"nombre km" %>
        <%= f.number_field :kmessence, id:'userKmessencel', min: 0   %>
      </div>
      <div class="col-2 unit">
        <p>l/100 km</p>
      </div>
      <div class="col-1 charge">
        <p>2.7 kg</p>
      </div>
      <div class="col-4 white-rectangle">
        <p id="scoreEssencel"></p>
      </div>
    </div>
    <!-- field gazolel  -->
    <div class="row align-items-center item mt-1">
      <div class=" col-2 field text-center">
        <p>Gazole</p>
        <%= f.label :consommation %>
        <%= f.number_field :gazolel, id:'userGazolel', min: 0   %>
        <%= f.label :"nombre km" %>
        <%= f.number_field :kmgazolel, id:'userKmgazolel', min: 0   %>
      </div>
      <div class="col-2 unit">
        <p>l/100 km</p>
      </div>
      <div class="col-1 charge">
        <p>3.1 kg</p>
      </div>
      <div class="col-4 white-rectangle">
        <p id="scoreGazolel"></p>
      </div>
    </div>
    <!-- field gpll  -->
    <div class="row align-items-center item mt-1">
      <div class=" col-2 field text-center">
        <p>GPL</p>
        <%= f.label :consommation %>
        <%= f.number_field :lgpl, id:'userLgpl',min: 0   %>
        <%= f.label :"nombre km" %>
        <%= f.number_field :kmgpl, id:'userKmgpl',min: 0   %>
      </div>
      <div class="col-2 unit">
        <p>l/100 km</p>
      </div>
      <div class="col-1 charge">
        <p>1.86 kg</p>
      </div>
      <div class="col-4 white-rectangle">
        <p id="scoreLgpl"></p>
      </div>
    </div>
    <!-- field e85  -->
    <div class="row align-items-center item mt-1">
      <div class=" col-2 field text-center">
        <p>E85</p>
        <%= f.label :consommation %>
        <%= f.number_field :le85, id:'userLe85', min: 0   %>
        <%= f.label :"nombre km" %>
        <%= f.number_field :kme85, id:'userKme85' , min: 0  %>
      </div>
      <div class="col-2 unit">
        <p>l/100 km</p>
      </div>
      <div class="col-1 charge">
        <p>1.11 kg</p>
      </div>
      <div class="col-4 white-rectangle">
        <p id="scoreLe85"></p>
      </div>
    </div>
    <!-- field gaz nat kwH   -->
    <div class="row align-items-center item mt-1">
      <div class=" col-2 field text-center">
        <p>Gaz naturel</p>
        <%= f.label :consommation %>
        <%= f.number_field :voitgaznatkg, id:'userLGaz', min: 0   %>
        <%= f.label :"nombre km" %>
        <%= f.number_field :voitgaznatkwh, id:'userKGaz', min: 0   %>
      </div>
      <div class="col-2 unit">
        <p>kg/100 km</p>
      </div>
      <div class="col-1 charge">
        <p>3.22 kg</p>
      </div>
      <div class="col-4 white-rectangle">
        <p id="scoreLgaz"></p>
      </div>
    </div>
    <!-- field electrique  -->
    <div class="row align-items-center item mt-1">
      <div class=" col-2 field text-center">
        <p>Electrique</p>
        <%= f.label :consommation %>
        <%= f.number_field :lelectrique, id:'userLelectrique', min: 0   %>
        <%= f.label :"nombre km" %>
        <%= f.number_field :kmelectrique, id:'userKmelectrique', min: 0   %>
      </div>
      <div class="col-2 unit">
        <p>kWh/100</p>
      </div>
      <div class="col-1 charge">
        <p>0.052 kg</p>
      </div>
      <div class="col-4 white-rectangle">
        <p id="scoreLelectrique"></p>
      </div>
    </div>
  </div>
</div>
