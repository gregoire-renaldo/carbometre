<!-- all user footprints, clickable, redirecting show  -->
<div class="container">
  <div class="row justify-content-around ">
    <% @footprints.each do |footprint| %>
    <div class="card mx-2 my-2" style="width: 16rem;">
      <div class="card-body">
        <h5 class="card-title"><%= footprint.title%></h5>
        <h6 class="card-subtitle mb-2 text-muted"><%= footprint.total_score%></h6>
        <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.
        </p>
        <%= link_to" Modifier l'empreinte", edit_footprint_path(footprint) %>
        <%= link_to "Supprimer",
                        footprint_path(footprint),
                        method: :delete,
                        data: { confirm: "Êtes-vous sûr ?" } %>
      </div>
    </div>
    <% end %>
  </div>
</div>



